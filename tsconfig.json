{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"], 
      "@components/*": ["./src/components/*"], 
      "@store/*": ["./src/store/*"], 
      "@styles/*": ["./src/styles/*"], 
      "@constants/*": ["./src/constants/*"], 
    }
    
  },
  "include": ["src"]
}
